<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
        <item android:state_pressed="true" >
            <shape android:shape="rectangle"  >
                <corners android:radius="5dip" />
                <stroke android:width="1dip" android:color="#f2c80b" />
                <gradient android:angle="-90" android:startColor="#ffffff" android:endColor="#689a92"  />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="5dip" />
                <stroke android:width="1dip" android:color="#5e7" />
                <solid android:color="#5567"/>
            </shape>
        </item>
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="5dip" />
                <stroke android:width="1dip" android:color="#f49f0c" />
                <gradient android:angle="-90" android:startColor="#ff9500" android:endColor="#ede01c" />
            </shape>
        </item>
    </selector>
